# =======================================
# Zoho API Configuration
# =======================================

ZOHO_API_URL=https://mail.zoho.com/api/accounts/[YOUR_ACCOUNT_ID]/messages
ZOHO_FROM_ADDRESS=example@domain.com
ZOHO_CLIENT_ID=your_zoho_client_id
ZOHO_CLIENT_SECRET=your_zoho_client_secret
ZOHO_REFRESH_TOKEN=your_zoho_refresh_token

# =======================================
# SMTP Server Configuration
# =======================================

# Port to listen (default: 25 if not set)
SMTP_PORT=

# Require SMTP AUTH (default: false if not set)
SMTP_AUTH_REQUIRED=false

# SMTP AUTH username (optional, default: user)
SMTP_USER=

# SMTP AUTH password (optional, default: password)
SMTP_PASSWORD=

# =======================================
# Logging Configuration
# =======================================

# Available levels: error, info, debug (default: info)
LOG_LEVEL=error
